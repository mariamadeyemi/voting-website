<% if (locals.flash) { let flash=locals.flash;%>

    <div class="alert alert-<%- flash.type.toLowerCase() == 'error' ? 'danger' : flash.type.toLowerCase()  %> alert-dismissible fade show"
      style="position: fixed; top: 100px; left: 50%; transform: translateX(-50%);">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>
        <%- flash.type %>!
      </strong>
      <%- flash.message %>
    </div>
    <% } %>

    <script>
      // $(function () {
      //   $('.alert').hide().delay(5000)
      // })
      setTimeout(() => {
        document.querySelector('.alert').style.display = 'none'
      }, 5000);
    </script>
  